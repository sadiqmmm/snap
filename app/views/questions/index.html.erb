<% provide(:title, "Make it Snappy Q&A") %>
<div id="ask">
	<h1>Ask a Question</h1>
	<% if logged_in? %>
	  <%= render 'question_form' %>
	<% else %>
		<p>Please <%= link_to "login", login_path %> to ask or answer questions.</p>
	<% end %>
</div>

<div id="questions">
	<h2>Unsolved Question:</h2>
	<% if @questions.any? %>
		<ul>
			<%= render @questions %>
		</ul>
		<%= will_paginate %>
	<% else %>
		<p>No queston have been asked.</p>
	<% end %>
</div>	